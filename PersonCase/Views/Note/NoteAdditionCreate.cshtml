@model PersonCase.ViewModels.NoteAdditionViewModel
@{
    var id = (Guid)ViewData["id"];
}
<form method="post" asp-action="AddAddition" asp-route-id="@id">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <textarea asp-for="Text" class="form-control" id="note-text" placeholder="Добавить" rows="3"></textarea>
        <span asp-validation-for="Text"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>